<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg_gradient"
    >

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/googleTasksRecyclerview"
        android:layout_below="@+id/tasklistsTitleLabel"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/linearLayout"/>

    <LinearLayout
        android:id="@id/linearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        >

        <Button
            android:text="Download"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/downloadTasklistButton"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#40ffffff"
            android:textColor="@android:color/white"
            android:layout_weight="1"/>

        <Button
            android:text="Upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/uploadTasklistButton"
            android:background="#40ffffff"
            android:textColor="@android:color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"/>
    </LinearLayout>

    <TextView
        android:text="My Google Tasklists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tasklistsTitleLabel"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:paddingBottom="8dp"
        android:textSize="18sp"/>


</RelativeLayout>