<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:background="#fff5f5cb">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toDoListItemCheckBox"
        android:textColor="?attr/editTextColor"
        android:checked="false"
        android:saveEnabled="false"
        />

    <TextView
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/toDoListItemCheckBox"
        android:layout_toStartOf="@+id/reorderImageView"
        android:layout_marginStart="4dp"
        android:id="@+id/titleTextView"
        tools:text="Take Hope to Stephanie's"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_marginEnd="4dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_reorder_grey_500_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/reorderImageView"
        />

</RelativeLayout>